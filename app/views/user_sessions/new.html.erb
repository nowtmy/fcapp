<div class="container">
  <div class="clear3"></div>
  <div class="hero-unit logo">
    <div class="clear5" style="margin-top: 20px;"></div>
    <center><h2>FlyCert Electrical Demonstration Account</h2></center>
  </div>
  <div class="login_box">
    <div class="row">
    <div class="span10">
      <p class="account-info">
        Enter your email and password to access your account
      </p>
    </div>
  </div>
  <div class="clear2"></div>
    <%= form_for @user_session, :class=>'form-stacked', :url => {:action => "create"} do |f| %>
        <div class="span3">
          <p>
            <%= f.label :login, 'Login', :class => 'label important label-right' %>
          </p>
          <div class="clear2"></div>
          <p>
            <%= f.label :password, 'Password', :class => 'label important label-right' %>
          </p>
        </div>

        <div class="span5">
          <p>
            <%= f.text_field :login, :class => 'xlarge' %>
          </p>
          <p>
            <%= f.password_field :password, :class => 'xlarge' %>
          </p>
        </div>
        <div class="clear2" style="clear: both;"></div>
        <center>
          <%= f.submit 'Login', :class => "btn primary" %>
        </center>
    <% end %>
  </div>

  <div class="clear2"></div>
</div>
