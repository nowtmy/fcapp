<div class="body">
  <div class="row contact-logo">
    <div class="span2">
      <div class="image"><img src="/images/contacts_LARGE_ICON.png"/></div>
    </div>
  </div>

  <div class="row t-lec-image" style="float: right;">
    <div class="span3 t-lec-image-desc">
      <% if current_user.profile.nil? %>
          <img src="/images/T-Lec-clip-no-image-default.png"/>
      <% else %>
          <%= image_tag current_user.profile.url(:small) %>
      <% end %>
    </div>
  </div>
  <div class="clear3"></div>
  <div class="contact-wrapper">
    <div class="row">
      <div class="span4 padding-left-20">Name</div>
      <div class="span4 padding-left-20">Company</div>
      <div class="span4 padding-left-20">Address</div>
    </div>
    <div class="clear"></div>
    <div class="row">
      <div class="span16 bar-row">
        <p class="new-contact-p" onclick="$('#contactForm').toggle(10); return false">Add A New Contact</p>
      </div>
      <div id="contactForm" style="display: none; margin: 0 20px;">
        <%= render 'form' %>
      </div>
    </div>
    <div id="contactListing">
      <%= render :partial => 'contacts/contact_listing' %>
    </div>
  </div>
</div>
<script type="text/javascript">
    function expandContact(contact) {

        var t = $("#contact-desc-show_" + contact).is(":visible");

        if (t == false) {
            $(".contact-desc-show-row").hide();
            $("#contact-desc-edit_" + contact).slideDown(1);
            $("#contact-desc-show_" + contact).slideDown(1);
        }
        else if (t == true) {
            $(".contact-desc-show-row").hide();
            $("#contact-desc-edit_" + contact).slideDown(1);
        }
    }

