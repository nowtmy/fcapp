<div class="left-info" style="width: 350px; float: left">
  <div class="span2" style="text-align: right;">
    <div class="label-space"><span class="label">Name</span></div>
    <div class="label-space"><span class="label">Company</span></div>
    <div class="label-space"><span class="label">Telephone</span></div>
    <div class="label-space"><span class="label">Mobile</span></div>
    <div class="label-space"><span class="label">Email</span></div>
  </div>
  <div class="span3">
    <div class="label-space"><%= name(contact) %></div>
    <div class="label-space"><%= contact.company %></div>
    <div class="label-space"><%= contact.telephone %></div>
    <div class="label-space"><%= contact.mobile %></div>
    <div class="label-space"><%= contact.email %></div>
  </div>
</div>
<div class="right-info" style="width: 350px; float: left">
