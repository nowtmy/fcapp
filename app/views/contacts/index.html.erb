<h1>Listing contacts</h1>

<table>
  <tr>
    <th>Firstname</th>
    <th>Secondname</th>
    <th>Company</th>
    <th>Telephone</th>
    <th>Mobile</th>
    <th>Email</th>
    <th>Addressline1</th>
    <th>Addressline2</th>
    <th>Addressline3</th>
    <th>City</th>
    <th>Country</th>
    <th>Postcode</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.firstname %></td>
    <td><%= contact.secondname %></td>
    <td><%= contact.company %></td>
    <td><%= contact.telephone %></td>
    <td><%= contact.mobile %></td>
    <td><%= contact.email %></td>
    <td><%= contact.addressline1 %></td>
    <td><%= contact.addressline2 %></td>
    <td><%= contact.addressline3 %></td>
    <td><%= contact.city %></td>
    <td><%= contact.country %></td>
    <td><%= contact.postcode %></td>
    <td><%= link_to 'Show', contact %></td>
    <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
    <td><%= link_to 'Destroy', contact, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

