<div class="signupbox">
  <%= form_for(@user) do |f| %>
      <div class="span3">
        <p>
          <%= f.label :first_name, :class => 'normal-label' %>
        </p>

        <p>
          <%= f.label :last_name, :class => 'normal-label' %>
        </p>

        <p>
          <%= f.label :address, :class => 'normal-label' %>
        </p>

        <p>
          <%= f.label :login, :class => 'normal-label' %>
        </p>

        <p>
          <%= f.label :email, :class => 'normal-label' %>
        </p>

        <p>
          <%= f.label :password, :class => 'normal-label' %>
        </p>

        <p>
          <%= f.label :password_confirmation, :class => 'normal-label' %>
        </p>
      </div>
      <div class="span3">
        <p></p>

        <p>
          <%= f.text_field :first_name, :class => 'normal-input xlarge' %>
        </p>

        <p>
          <%= f.text_field :last_name, :class => 'normal-input xlarge' %>
        </p>

        <p>
          <%= f.text_field :address, :class => 'normal-input xlarge' %>
        </p>

        <p>
          <%= f.text_field :login, :class => 'normal-input xlarge' %>
        </p>

        <p>
          <%= f.text_field :email, :class => 'normal-input xlarge' %>
        </p>

        <p>
          <%= f.password_field :password, :class => 'normal-input xlarge' %>
        </p>

        <p>
          <%= f.password_field :password_confirmation, :class => 'normal-input xlarge' %>
        </p>
      </div>
      <div class="clear3"></div>
      <div class="addContactButton">
        <%= f.submit 'Register', :class => 'btn' %>
      </div>

  <% end %>
  <div class="clear5"></div>
</div>
<hr />